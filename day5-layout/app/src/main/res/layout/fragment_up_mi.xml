<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpMiFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/leftleft"
        android:src="@drawable/leftleft"
        android:scaleType="centerInside"
        android:background="@color/white"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="关闭"
        android:textColor="#808080"
        android:id="@+id/close"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/language"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="简体中文▼"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/leftleft"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/shelft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:src="@drawable/shelft"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintRight_toRightOf="@id/close"/>

    <!-- 搜索按钮，可选，也可以在EditText中通过监听软键盘的搜索键来触发搜索 -->

    <TextView
        android:id="@+id/textinput_helper_text"
        android:layout_width="151dp"
        android:layout_height="29dp"
        android:layout_marginTop="76dp"
        android:text="小米账号帮助中心"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3"
        android:hint="请输入问题关键词"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textinput_helper_text" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#D3D3D3"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/glass"
        app:layout_constraintBottom_toBottomOf="@id/search_edit_text"
        app:layout_constraintRight_toLeftOf="@id/search_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_edit_text" />

    <TextView
        android:id="@+id/helpself"
        android:layout_width="71dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="自助服务"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_button">

    </TextView>

    <ImageButton
        android:id="@+id/button_with_image"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/key"
        app:layout_constraintTop_toBottomOf="@id/helpself"
        tools:layout_editor_absoluteX="40dp" />

    <ImageButton
        android:id="@+id/button_with_image2"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:src="@drawable/key"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="249dp"
        app:layout_constraintLeft_toRightOf="@id/button_with_image"
        app:layout_constraintTop_toTopOf="@id/button_with_image"
        android:layout_marginStart="15dp"
        />

    <ImageButton
        android:id="@+id/button_with_image3"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:src="@drawable/key"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="249dp"
        app:layout_constraintLeft_toRightOf="@id/button_with_image2"
        app:layout_constraintTop_toTopOf="@id/button_with_image2"
        android:layout_marginStart="15dp"/>

    <ImageButton
        android:id="@+id/button_with_image4"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:scaleType="centerInside"
        android:src="@drawable/key"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="346dp"
        app:layout_constraintTop_toBottomOf="@id/button_with_image"/>

    <ImageButton
        android:id="@+id/button_with_image5"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:src="@drawable/key"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toRightOf="@id/button_with_image4"
        app:layout_constraintTop_toTopOf="@id/button_with_image4"
        android:layout_marginStart="15dp"/>
    <ImageButton
        android:id="@+id/button_with_image6"
        android:layout_width="101dp"
        android:layout_height="103dp"
        android:src="@drawable/key"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toRightOf="@id/button_with_image5"
        app:layout_constraintTop_toTopOf="@id/button_with_image5"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/helpcenter"
        android:layout_width="71dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="帮助中心"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_with_image4">

    </TextView>

    <Button
        android:id="@+id/more"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="更多"
        android:textColor="#808080"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/helpcenter"
        />

    <Button
        android:id="@+id/norque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="常见问题"
        android:background="@color/white"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/helpcenter"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log"
        android:text="登录"
        android:background="@color/white"
        android:textColor="#808080"
        app:layout_constraintLeft_toRightOf="@id/norque"
        app:layout_constraintTop_toTopOf="@id/norque"
        android:layout_marginStart="14dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeinf"
        android:text="修改信息"
        android:background="@color/white"
        android:textColor="#808080"
        app:layout_constraintLeft_toRightOf="@id/log"
        app:layout_constraintTop_toTopOf="@id/log"
        android:layout_marginStart="14dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/securty"
        android:text="账号安全"
        android:background="@color/white"
        android:textColor="#808080"
        app:layout_constraintLeft_toRightOf="@id/changeinf"
        app:layout_constraintTop_toTopOf="@id/changeinf"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/detile"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="setting1"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/norque">

    </TextView>


    <ImageView
        android:id="@+id/imgright"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:src="@drawable/right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/detile"/>

</androidx.constraintlayout.widget.ConstraintLayout>